{% extends 'back/base.html.twig' %}

{% block title %}New Marques{% endblock %}

{% block body %}
    <h1>Create new Marques</h1>
    <main id="main" class="main">

    <div class="pagetitle">
      <h1>Form Layouts</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Forms</li>
          <li class="breadcrumb-item active">Layouts</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    <section class="section">
      <div class="row">
        <div class="col-lg-6">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Add marque </h5>

              <!-- Horizontal Form -->
             
              {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
                <div class="row mb-3">

                        {{form_label(form.nom)}}
                        {{ form_widget(form.nom) }}
                                                {{form_errors(form.nom)}}

                 
                </div>
               
                <div class="text-center">
                  <button  class="btn btn-primary">{{button_label|default('save')}}</button>
                </div>
{{ form_end(form) }}
            </div>
            <a href="{{ path('app_marques_index') }}">back to list</a>
          </div>

          

        </div>

        
      </div>
    </section>

   


{% endblock %}
